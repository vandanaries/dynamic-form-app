[
  {
    "title": "User Registration",
    "fields": [
      {
        "label": "Full Name",
        "name": "fullName",
        "type": "text",
        "required": true,
        "placeholder": "Enter your full name",
        "ariaLabel": "Full Name",
        "ariaDescribedBy": "fullNameHelp",
        "helperText": "Please enter your legal full name"
      },
      {
        "label": "Email",
        "name": "email",
        "type": "text",
        "required": true,
        "validation": {
          "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$",
          "message": "Invalid email address"
        },
        "placeholder": "you@example.com",
        "ariaLabel": "Email Address",
        "ariaDescribedBy": "emailHelp",
        "helperText": "We’ll never share your email"
      },
      {
        "label": "Date of Birth",
        "name": "dob",
        "type": "date",
        "required": false,
        "ariaLabel": "Date of Birth",
        "ariaDescribedBy": "dobHelp",
        "helperText": "Select your birth date"
      },
      {
        "label": "Gender",
        "name": "gender",
        "type": "dropdown",
        "options": ["Male", "Female", "Other"],
        "required": true,
        "ariaLabel": "Gender",
        "ariaDescribedBy": "genderHelp",
        "helperText": "Choose your gender from the list"
      },
      {
        "label": "Hobbies",
        "name": "hobbies",
        "type": "multiselect",
        "options": [
          "Reading",
          "Sports",
          "Music",
          "Travel",
          "Gaming",
          "Cooking"
        ],
        "required": false,
        "ariaLabel": "Hobbies",
        "ariaDescribedBy": "hobbiesHelp",
        "helperText": "Select one or more hobbies"
      },
      {
        "label": "Subscribe to newsletter",
        "name": "subscribe",
        "type": "checkbox",
        "required": false,
        "ariaLabel": "Subscribe to newsletter",
        "ariaDescribedBy": "subscribeHelp",
        "helperText": "Tick the box if you want to receive updates"
      },
      {
        "label": "About Yourself",
        "name": "about",
        "type": "textarea",
        "required": false,
        "placeholder": "Tell us about yourself...",
        "ariaLabel": "About Yourself",
        "ariaDescribedBy": "aboutHelp",
        "helperText": "Write a short description about yourself"
      }
    ]
  },
  {
    "title": "Product Feedback",
    "fields": [
      {
        "label": "Your Name",
        "name": "name",
        "type": "text",
        "required": true,
        "placeholder": "Enter your full name",
        "ariaLabel": "Your Name",
        "ariaDescribedBy": "nameHelp",
        "helperText": "Please enter your full name"
      },
      {
        "label": "Your Email",
        "name": "feedbackEmail",
        "type": "text",
        "required": true,
        "validation": {
          "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$",
          "message": "Please provide a valid email"
        },
        "placeholder": "john@example.com",
        "ariaLabel": "Your Email",
        "ariaDescribedBy": "feedbackEmailHelp",
        "helperText": "We’ll use this email to contact you"
      },
      {
        "label": "Product Rating",
        "name": "rating",
        "type": "dropdown",
        "options": ["Excellent", "Good", "Average", "Poor"],
        "required": true,
        "ariaLabel": "Product Rating",
        "ariaDescribedBy": "ratingHelp",
        "helperText": "Select how you rate the product"
      },
      {
        "label": "Feedback Category",
        "name": "category",
        "type": "multiselect",
        "options": [
          "Bug Report",
          "Feature Request",
          "UI/UX",
          "Performance",
          "Other"
        ],
        "required": true,
        "ariaLabel": "Feedback Category",
        "ariaDescribedBy": "categoryHelp",
        "helperText": "Choose one or more categories"
      },
      {
        "label": "Your Feedback",
        "name": "message",
        "type": "textarea",
        "required": true,
        "placeholder": "Please share your detailed feedback...",
        "ariaLabel": "Your Feedback",
        "ariaDescribedBy": "messageHelp",
        "helperText": "Provide detailed feedback about your experience"
      },
      {
        "label": "Would you recommend us?",
        "name": "recommend",
        "type": "checkbox",
        "required": false,
        "ariaLabel": "Would you recommend us?",
        "ariaDescribedBy": "recommendHelp",
        "helperText": "Tick the box if you would recommend us"
      }
    ]
  }
]
